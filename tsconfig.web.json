{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "src/renderer/src/**/*",
    "src/shared/**/*",
    "src/preload/*.d.ts"
  ]
}
