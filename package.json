{
  "name": "willdo",
  "version": "1.0.0",
  "description": "Local-first todo app with natural language entry",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder --mac",
    "test": "vitest run",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "author": "Will Jackson",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "better-sqlite3"
    ]
  },
  "build": {
    "appId": "com.willdo.app",
    "productName": "WillDo",
    "mac": {
      "target": [
        "dmg",
        "dir"
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "dmg": {
      "title": "WillDo",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rrule": "^2.8.1",
    "@willdo/shared": "workspace:*"
  }
}
